<div class="container">
  <div class="row justify-content-center">
    <div class="card col-12 col-lg-6 mt-4">
      <div class="card-body">
        <h2>Add an animal</h2>
        <%= simple_form_for(@animal) do |f| %>
          <%= f.input :name, placeholder: 'Happy' %>
          <%= f.input :breed, as: :radio_buttons, collection: ['Alpaga', 'Camel','Llama'], wrapper: :vertical_collection_inline %>
          <%= f.input :birth_date %>
          <%= f.input :colour, as: :radio_buttons, collection: ['White', 'Black','Brown', 'Grey', 'Beige', 'Red'], wrapper: :vertical_collection_inline %>
          <%= f.input :address, placeholder: '16 villa Gaudelet, Paris' %>
          <%= f.input :description, placeholder: 'Describe your animal :)' %>
          <%= f.input :photo, as: :file %>
          <%= f.input :price, placeholder: '100' %>
          <div class='d-flex'>
            <%= link_to 'Cancel', dashboard_path, class: 'btn btn-info' %>
            <%= f.submit 'Add my animal', class: 'btn btn-primary ml-2' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
