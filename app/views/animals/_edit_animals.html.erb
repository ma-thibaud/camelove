<h1 class="mb-4">Change <%= @animal.name %>'s details</h1>
      <%= simple_form_for(@animal) do |f| %>
        <%= f.input :name  %>
        <%= f.input :breed, collection: ['Alpaga', 'Camel','Llama'] %>
        <%= f.input :birth_date %>
        <%= f.input :colour %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.input :photo %>
        <%= f.input :price %>
        <%= f.submit 'Update', class: 'btn btn-primary mr-2' %>
        <%= link_to 'Cancel', animal_path(@animal), class: 'btn btn-secondary' %>
      <% end %>
