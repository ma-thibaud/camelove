 <div class="container mt-5">

    <div class="d-flex justify-content-between">
      <h2 >Animal list</h2>
      <div>
        <%= link_to 'Add an animal', new_animal_path, class: 'btn btn-primary' %>
      </div>
   </div>

  <div class="row pt-4">
       <% @animals.each do |animal| %>
         <% if animal.dead == false %>
          <div class="card col-4 ml-3">
            <ul>
              <li><%= animal.name %></li>
              <li><%= animal.breed %></li>
              <li><%= animal.price %>â‚¬ per day</li>
              <li><%= animal.photo %></li>
              <%= link_to 'More info', animal_path(animal), class: 'btn btn-primary' %>
           </ul>
          </div>
      <% end %>
    <% end %>
    </div>
  </div>

